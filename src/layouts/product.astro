---
import { ArrowUpRight, Mouse } from "phosphor-react";
import Checkout from "../components/checkout";
import Layout from "./layout.astro";

const { frontmatter } = Astro.props;
const slug = frontmatter.url.split("/").at(-1);
---

<Layout title={frontmatter.title + " - Deploid Studio"}>
  <div class="container mx-auto px-4 pt-10 md:pt-20">
    <div class="flex flex-col md:flex-row items-stretch gap-20 md:gap-8">
      <div class="flex-1 flex flex-col items-center justify-start gap-8">
        <a class="w-full max-w-md aspect-[9/16] bg-zinc-700 rounded-2xl"></a>
        <div class="flex gap-4">
          <button><Mouse size={28}/></button>
          <button><ArrowUpRight size={28}/></button>
        </div>
      </div>
      <div class="flex flex-col max-w-md gap-8">
        <h1 class="font-semibold text-4xl">{frontmatter.title}</h1>
        <div class="prose-lg text-zinc-300">
          <slot/>
        </div>
        <Checkout slug={slug} client:visible/>
      </div>
    </div>
  </div>
  
</Layout>
