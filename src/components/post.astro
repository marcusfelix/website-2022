---
const { url, data, index, badge } = Astro.props;
const slug = url.split("/").at(-1);
---
<a href={url} class={"flex gap-10 items-center " + (index % 2 == 0 ?  "flex-col lg:flex-row" : "flex-col lg:flex-row-reverse")}>
  <div class="flex-1">
    <img src={data.cover} class="aspect-[4/3] object-cover"/>
  </div>
  <div class="flex-1 flex items-start flex-col gap-6">
    {badge ? <span class="border-[1px] border-white text-white text-sm uppercase px-2 py-1 rounded-lg">Blog post</span> : null}
    <h2 class="font-bold text-6xl tracking-tight">{data.title}</h2>
    <p class="text-2xl text-zinc-400">{data.description}</p>
    <div class="flex gap-4">
      {data.tags.map((tag: string) => <span class="bg-white/20 text-white px-4 py-2 uppercase text-sm rounded-full">{tag}</span>)}
    </div>
  </div>
</a>